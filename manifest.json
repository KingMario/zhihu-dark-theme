{
  "manifest_version": 3,
  "name": "Zhihu Dark Theme Enforcer",
  "version": "1.0.0",
  "description": "Automatically appends ?theme=dark to Zhihu pages.",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["*://*.zhihu.com/*"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "zhihu-dark-rules",
        "enabled": true,
        "path": "rules/zhihu-dark.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.zhihu.com/*"],
      "run_at": "document_start",
      "js": ["content.js"]
    }
  ]
}
